<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:id="@+id/warning_outcomes_higher_than_income_dialogCardView"
    android:layout_gravity="center"
    android:layout_height="190dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/warning_crossing_savings_dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uwaga !"
            android:textColor="@color/colorRed"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/warning_crossing_savings_dialogTitle"
            android:text="Twoje wydatki w tym miesiącu przekroczyły Twoje dochody" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>