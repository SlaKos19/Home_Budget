<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout

        android:id="@+id/loginPanelImageRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/userRelativeLayout">

        <ImageView
            android:layout_centerInParent="true"
            android:src="@drawable/app_logo"
            android:layout_width="230dp"
            android:layout_height="230dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_centerInParent="true"

        android:id="@+id/userRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:layout_marginLeft="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/loginPanelArrowLeft"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_left"/>

        <ImageView
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_right"
            android:layout_alignParentEnd="true"
            android:id="@+id/loginPanelArrowRight"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        
        <TextSwitcher
            android:id="@+id/loginPanelTextSwitcher"
            android:layout_centerInParent="true"
            android:layout_width="230dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/userRelativeLayout"
        android:id="@+id/loginPanelButtonRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="@drawable/button_default"
            android:id="@+id/loginPanelBtnZaloguj"
            android:text="ZALOGUJ"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_width="170dp"
            android:layout_height="60dp"/>
        <Button
            android:background="@drawable/button_default"
            android:id="@+id/loginPanelStworzNowegoUzytkownika"
            android:layout_centerHorizontal="true"
            android:text="Stworz nowego uzytkownika"
            android:layout_below="@id/loginPanelBtnZaloguj"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:layout_height="60dp"/>

    </RelativeLayout>

</RelativeLayout>