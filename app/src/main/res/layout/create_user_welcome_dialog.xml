<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_centerInParent="true"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="430dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/firstTextView"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Witaj w Panelu Tworzenia Użytkownika"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/secondTextView"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/firstTextView"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Zostaniesz poproszony o odpowiedzenie na 12 - 16 pytań"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/thirdTextView"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_below="@id/secondTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="Pytania mają na celu ustalenie Twoich dochodów, wydatków oraz pożądanych oszczędności. Posłużą one do ustalenia komunikatów alarmujących oraz prognozowania wydatków w przyszłości"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_centerHorizontal="true"
                android:text="OK"
                android:layout_marginTop="30dp"
                android:layout_below="@id/thirdTextView"
                android:id="@+id/createUserDialogBtnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

</androidx.cardview.widget.CardView>

