<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:src="@drawable/ic_dollar_sign_green"
        android:layout_centerVertical="true"
        android:id="@+id/recview_imageView"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>

    <RelativeLayout
        android:layout_toRightOf="@id/recview_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:text="Kategoria"
            android:id="@+id/recview_textViewCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="17sp"
            android:layout_marginRight="17sp"
            android:text="37.55 zÅ‚"
            android:layout_alignParentRight="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/recview_textViewAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/recview_textViewAmount"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17sp"
            android:textSize="18sp"
            android:text="09.07.2020"
            android:id="@+id/recview_textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>