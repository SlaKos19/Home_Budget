<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:padding="15dp"
    android:layout_gravity="center"
    android:background="@color/whtie">

    <TextView
        android:textStyle="bold"
        android:id="@+id/creatingNewOutcomeTitle"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Tworzenie nowego wydatku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="15dp"
        android:inputType="numberDecimal"
        android:ems="9"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/creatingNewOutcomeTitle"
        android:id="@+id/creatingNewOutcomeAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/creatingNewOutcomeTitle"
        android:layout_toRightOf="@id/creatingNewOutcomeAmount"
        android:text="zł"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:hint="Nazwa wydatku"
        android:ems="9"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/creatingNewOutcomeAmount"
        android:id="@+id/creatingNewOutcomeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/creatingNewUserRelLayWithCategoryOutcome"
        android:layout_marginTop="25dp"
        android:layout_below="@id/creatingNewOutcomeName"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/creatingNewOutcomeImage"
            android:src="@drawable/ic_dollar_sign_red"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/creatingNewOutcomeCategoryName"
            android:layout_marginLeft="15dp"
            android:text="Wybierz kategorię"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/creatingNewOutcomeImage"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/creatingNewUserRelLayWithCategoryOutcome"
        android:layout_width="220dp"
        android:layout_height="wrap_content">

        <Button
            android:background="@drawable/button_default"
            android:text="Anuluj"
            android:id="@+id/creatingNewOutcomeButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:background="@drawable/button_default"
            android:text="zapisz"
            android:layout_alignParentRight="true"
            android:id="@+id/creatingNewOutcomeButtonOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</RelativeLayout>